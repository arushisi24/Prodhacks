{
  "manifest_version": 3,
  "name": "FAFSA Buddy",
  "version": "0.1.0",
  "description": "Your personal assistant for navigating the FAFSA application process.",
  "permissions": ["storage", "scripting", "activeTab", "cookies"],
  "host_permissions": [
    "https://studentaid.gov/*",
    "https://prodhacks3.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://studentaid.gov/*"],
      "js": ["content/content.js"],
      "css": ["content/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/icon48.png"],
      "matches": ["https://studentaid.gov/*"]
    }
  ]
}