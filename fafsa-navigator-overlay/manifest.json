{
  "manifest_version": 3,
  "name": "FAFSA Navigator Overlay",
  "version": "0.1.0",
  "description": "Overlay sidebar for studentaid.gov",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://studentaid.gov/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://studentaid.gov/*"],
      "js": ["content/content.js"],
      "css": ["content/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
